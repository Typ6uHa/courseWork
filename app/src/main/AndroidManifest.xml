<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.aizat.course_work">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.aizat.course_work.ui.auth.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.profile.ProfileActivity"
            android:label="Профиль"/>
        <activity android:name=".ui.auth.register.RegisterActivity"/>
        <activity
            android:name=".ui.main.course.CourseActivity"
            android:label="Все курсы"/>
        <activity android:name=".ui.main.skills.TodoActivity"/>
        <activity
            android:name=".ui.main.spell.SpellActivity"
            android:label="Изученные навыки"/>
    </application>

</manifest>